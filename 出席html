<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>曜日でURLジャンプ</title>
  <script>
    function redirect() {
      const param = document.getElementById("urlParam").value;
      const day = new Date().getDay(); // 0=日, 1=月, ..., 6=土

      let baseUrl = "";

      switch (day) {
        case 1: // 月曜日
          baseUrl = "https://example.com/monday/";
          break;
        case 2: // 火曜日
          baseUrl = "https://example.com/tuesday/";
          break;
        case 3: // 水曜日
          baseUrl = "https://example.com/wednesday/";
          break;
        case 4: // 木曜日
          baseUrl = "https://example.com/thursday/";
          break;
        case 5: // 金曜日
          baseUrl = "https://attendance.is.it-chiba.ac.jp/attendance/class_room/";
          break;
        default:
          alert("今日は対象外の日です。");
          return;
      }

      // パラメータを末尾に追加してジャンプ
      window.location.href = baseUrl + encodeURIComponent(param);
    }
  </script>
</head>
<body>
  <h2>URL末尾を入力してください：</h2>
  <input type="text" id="urlParam" placeholder="末尾に付けるテキスト">
  <button onclick="redirect()">ジャンプする</button>
</body>
</html>
